var module = angular.module("Contacts", ["Contacts.filters", "Contacts.services","Contacts.directives"]);

module.config(['$routeProvider', function($routeProvider) {
  console.log("app router");
  $routeProvider.when("/contacts", {templateUrl: "<%= asset_path 'contacts/contacts.html' %>"});
  $routeProvider.when("/contacts_list", {templateUrl: "<%= asset_path 'contacts/contacts_list.html' %>"});
  $routeProvider.otherwise({redirectTo: "/contacts"});

}]);

var app = angular.module('plunker', []);

app.directive('clickAnywhereButHere', function($document){
  return {
    restrict: 'A',
    link: function(scope, elem, attr, ctrl) {
      elem.bind('click', function(e) {
        e.stopPropagation();
      });
      $document.bind('click', function() {
        scope.$apply(attr.clickAnywhereButHere);
      })
    }
  }
})

